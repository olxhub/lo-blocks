<Vertical id="SortableDemo" launchable="true">
  <CapaProblem id="SortableExample1">
    <SortableGrader>
      <TextBlock>Sort these programming languages by when they were first created:</TextBlock>
      <SortableInput>
        <TextBlock index="2">Python (1991)</TextBlock>
        <TextBlock index="4">JavaScript (1995)</TextBlock>
        <TextBlock index="1">C++ (1985)</TextBlock>
        <TextBlock index="3">Java (1995)</TextBlock>
      </SortableInput>
    </SortableGrader>
  </CapaProblem>

  <CapaProblem id="SortableExample2">
    <TextBlock>Order these planets by distance from the sun:</TextBlock>
    <SortableGrader>
      <SortableInput>
        <TextBlock index="2">Venus</TextBlock>
        <TextBlock index="4">Mars</TextBlock>
        <TextBlock index="1">Mercury</TextBlock>
        <TextBlock index="3">Earth</TextBlock>
      </SortableInput>
    </SortableGrader>
  </CapaProblem>
</Vertical>
