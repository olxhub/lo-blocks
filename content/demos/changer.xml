<!-- content/demos/changer.xml -->
<Lesson id="rewrite_lesson" launchable="true" title="Rewriting Lesson">
  <DigitSpanTask/>
  <TextBlock>Welcome to the Rewriting Station!</TextBlock>
  <TextInput id="student_essay"/>
  <LLMFeedback id="essay_rewrite"/>
  <SideBarPanel>
    <MainPane>
      <TextBlock>Choose a rewrite style:</TextBlock>
    </MainPane>
    <Sidebar>
      <LLMButton>
        <LLMPrompt target="essay_rewrite">
          Please rewrite this in first person:
          <Element>student_essay</Element>
        </LLMPrompt>
        First person
      </LLMButton>
      <$$>\frac{1}{p}</$$>
    </Sidebar>
  </SideBarPanel>
</Lesson>
