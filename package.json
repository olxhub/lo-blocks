{
  "name": "lo-blocks",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "firejail --noprofile --whitelist=$(pwd) next dev --turbopack",
    "dev-automation": "next dev --turbopack",
    "devfull": "npm run build && npm run dev",
    "event-server": "npx tsx src/scripts/event-server.ts",
    "dev:capture": "npm run event-server & npm run dev",
    "build": "npm run build:grammars && npm run build:parser-registry && npm run build:gen-block-registry && npm run build:content",
    "build:parser-registry": "firejail --whitelist=$(pwd) npx tsx src/scripts/generate-parser-registry.ts",
    "build:prod": "npm run build && npx next build",
    "start": "firejail --noprofile --whitelist=$(pwd) next start",
    "start:prod": "npx next start",
    "typecheck": "npx tsc --noEmit",
    "lint": "firejail --whitelist=$(pwd) next lint",
    "xml2json": "firejail --whitelist=$(pwd) npx tsx src/scripts/xml2json.js",
    "xml2graph": "firejail --whitelist=$(pwd) npx tsx src/scripts/xml2graph.js",
    "build:grammars": "firejail --whitelist=$(pwd) npx tsx src/scripts/compile-grammars.ts",
    "build:gen-block-registry": "firejail --whitelist=$(pwd) node src/scripts/generateBlockRegistry.js",
    "build:generate-docs": "firejail --whitelist=$(pwd) node src/scripts/generate-docs.js",
    "_comment_build_content": "HACK: build:content runs content generation scripts. This should be replaced with a proper templated build system.",
    "build:content": "firejail --whitelist=$(pwd) npx tsx content/sba/psychology/convert-psych-mcq.js content/sba/psychology/operant-questions.json",
    "build:clean": "npm run clean && npm run clean-zombies ; npm install && npm run build",
    "clean": "firejail --whitelist=$(pwd) rm -rf .next node_modules .turbo out public/content",
    "clean-zombies": "pkill -9 -f 'next-server' ; pkill -9 -f 'next dev' ; pkill -9 -f postcss.js",
    "_comment_test_automation": "build-automation and test-automation are for automated build environments (e.g. ChatGPT sandbox, GitHub Actions, etc.), which are already sandboxed and might not have firejail",
    "build-automation": "npx tsx src/scripts/compile-grammars.ts && npx tsx src/scripts/generate-parser-registry.ts && node src/scripts/generateBlockRegistry.js && npx tsx content/sba/psychology/convert-psych-mcq.js content/sba/psychology/operant-questions.json",
    "test-automation": " vitest run",
    "test": "firejail --noprofile --whitelist=$(pwd) vitest",
    "test:unit": "firejail --noprofile --whitelist=$(pwd) vitest --exclude='**/integration/**'",
    "test:ui": "firejail --noprofile --whitelist=$(pwd) vitest --ui"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.958.0",
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/lang-xml": "^6.1.0",
    "@fontsource/geist-mono": "^5.2.6",
    "@fontsource/geist-sans": "^5.2.5",
    "@tailwindcss/typography": "^0.5.19",
    "@uiw/react-codemirror": "^4.23.12",
    "@xyflow/react": "^12.6.0",
    "codemirror": "^6.0.1",
    "complex.js": "^2.4.2",
    "crypto-js": "^4.2.0",
    "dagre": "^0.8.5",
    "fast-xml-parser": "^5.0.9",
    "get-port": "^7.1.0",
    "html-tags": "^5.0.0",
    "js-yaml": "^4.1.1",
    "json-stable-stringify": "^1.3.0",
    "katex": "^0.16.22",
    "lo_event": "^0.0.4",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.510.0",
    "next": "^16.1.1",
    "openai": "^5.3.0",
    "peggy": "^5.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "react-split": "^2.0.14",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "vitest": "^3.1.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/react": "^16.3.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9",
    "eslint-config-next": "^16.1.1",
    "glob": "^11.0.2",
    "jsdom": "^26.1.0",
    "minimatch": "^10.0.1",
    "postcss-nesting": "^13.0.1",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.2",
    "ws": "^8.19.0"
  }
}
