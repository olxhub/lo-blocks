{
  "name": "lo-blocks",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "firejail --noprofile --whitelist=$(pwd) next dev --turbopack",
    "build": "firejail --whitelist=$(pwd) npm run build:grammars && npm run build:gen-block-registry",
    "start": "firejail --noprofile --whitelist=$(pwd) next start",
    "lint": "firejail --whitelist=$(pwd) next lint",
    "xml2json": "firejail --whitelist=$(pwd) npx tsx src/scripts/xml2json.js",
    "build:grammars": "firejail --whitelist=$(pwd) node src/scripts/compile-grammars.js",
    "build:gen-block-registry": "firejail --whitelist=$(pwd) node src/scripts/generateBlockRegistry.js",
    "clean": "firejail --whitelist=$(pwd) rm -rf .next node_modules .turbo out",
    "clean-zombies": "pkill -f next-server; pkill -f transform.js; pkill -f 'node dev'",
    "_comment_test_automation": "test-automation is for automated build environments (e.g. ChatGPT sandbox, GitHub Actions, etc.), which are already sandboxed and might not have firejail",
    "test-automation": "node src/scripts/compile-grammars.js; node src/scripts/generateBlockRegistry.js; vitest",
    "test": "firejail --noprofile --whitelist=$(pwd) vitest",
    "test:ui": "firejail --noprofile --whitelist=$(pwd) vitest --ui"
  },
  "dependencies": {
    "@xyflow/react": "^12.6.0",
    "dagre": "^0.8.5",
    "fast-xml-parser": "^5.0.9",
    "get-port": "^7.1.0",
    "json-stable-stringify": "^1.3.0",
    "katex": "^0.16.22",
    "lo_event": "^0.0.4",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.510.0",
    "next": "15.2.4",
    "peggy": "^5.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "vitest": "^3.1.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "glob": "^11.0.2",
    "jsdom": "^26.1.0",
    "minimatch": "^10.0.1",
    "postcss-nesting": "^13.0.1",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.2"
  }
}
